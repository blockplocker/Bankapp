
@inject SignInManager<BankappUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<nav class="mb-4 w-100 d-flex justify-content-center">
    <ul class="nav nav-tabs">

        <li class="nav-item">
            <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" asp-page="./Index">Profil</a>
        </li>

        <li class="nav-item">
            <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" asp-page="./Email">Email</a>
        </li>

        <li class="nav-item">
            <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)"
               asp-page="./ChangePassword">Lösenord</a>
        </li>

        @if (hasExternalLogins)
        {
            <li class="nav-item">
                <a class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)"
                   asp-page="./ExternalLogins">Externa</a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"
               asp-page="./TwoFactorAuthentication">2FA</a>
        </li>

        <li class="nav-item">
            <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)"
               asp-page="./PersonalData">Persondata</a>
        </li>

    </ul>
</nav>
