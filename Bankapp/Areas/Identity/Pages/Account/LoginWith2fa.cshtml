@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";

    Layout = "/Pages/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-body d-flex justify-content-center align-items-center">

    <div class="login-box">

        <h3 class="text-center mb-4 fw-bold text-dark">Two-factor authentication</h3>

        <p class="text-center">Your login is protected with an authenticator app.<br />Enter your authenticator code below.</p>

        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">

            <input asp-for="RememberMe" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.TwoFactorCode"
                       class="form-control"
                       autocomplete="off" />
                <label asp-for="Input.TwoFactorCode"></label>
                <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Input.RememberMachine" class="form-check-input" />
                <label asp-for="Input.RememberMachine" class="form-check-label">
                    @Html.DisplayNameFor(m => m.Input.RememberMachine)
                </label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Log in</button>

        </form>

        <div class="text-center mt-3">
            <p>
                Don't have access to your authenticator device?<br />
                <a id="recovery-code-login"
                   asp-page="./LoginWithRecoveryCode"
                   asp-route-returnUrl="@Model.ReturnUrl">
                    Log in with a recovery code
                </a>
            </p>
        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}