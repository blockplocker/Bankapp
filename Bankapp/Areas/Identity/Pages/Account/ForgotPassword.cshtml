@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Glömt lösenord?";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/registration.css" />

<div class="register-body d-flex justify-content-center align-items-center">
    <div class="register-box">
        <h3 class="text-center mb-4 fw-bold text-dark">Återställ lösenord</h3>
        <form method="post">
            
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-floating h-40 mb-4">
                <input asp-for="Input.Email" class="form-control"/>
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">
                Skicka återställningslänk
            </button>

        </form>

        <div class="text-center mt-3">
            <a asp-page="./Login">Tillbaka till login</a>
        </div>
    </div>

</div>