@page "{accountId:int}"
@model Bankapp.Pages.RenameAccountModel
@{
    ViewData["Title"] = "Byt namn på konto";
}

<h2>Byt namn på konto</h2>

<form method="post">
    <div class="form-floating mb-3">
        <input asp-for="Input.NewAccountName" class="form-control" placeholder="Nytt kontonamn" />
        <label asp-for="Input.NewAccountName">Nytt kontonamn</label>
        <span asp-validation-for="Input.NewAccountName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Spara namnändring</button>
    <a asp-page="BankAccountPage" class="btn btn-secondary ms-2">Avbryt</a>
</form>

@if (Model.StatusMessage != null)
{
    <div class="alert alert-info mt-3">@Model.StatusMessage</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
