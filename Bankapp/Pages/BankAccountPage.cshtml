@page
@model Bankapp.Pages.BankAccountPageModel
@{
    ViewData["Title"] = "Min ekonomi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-3 col-lg-2 bg-light border-end vh-100 p-4">

            <h4 class="text-primary fw-bold mb-4">Bankify</h4>
            <div class="list-group">
                <a asp-page="BankAccountPage" class="list-group-item list-group-item-action active">
                    Min ekonomi
                </a>
                <a asp-page="/Transfer" class="list-group-item list-group-item-action">
                    överföra
                </a>
                <a asp-page="/TODO" class="list-group-item list-group-item-action">
                    Min profil
                </a>
            </div>
        </div>

        <div class="col-12 col-md-9 col-lg-10 p-4">
            <h2 class="mb-4 fw-semibold">Mina konton</h2>
            <a asp-page="Deposit" class="btn btn-success mb-3 ms-2">Sätt in pengar</a>
            <a asp-page="Withdraw" class="btn btn-success mb-3 ms-2">Ta ut pengar</a>
            <a asp-page="Transfer" class="btn btn-primary mb-3 ms-2">Överför</a>
            <a asp-page="CreateBankAccount" class="btn btn-success mb-3">Skapa nytt konto</a>
            <div class="list-group shadow-sm">
                @foreach (var account in Model.Accounts)
                {
                    <button class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                            data-bs-toggle="modal"
                            data-bs-target="#modal-@account.AccountId">
                        <div>
                            <span class="fw-semibold">@account.AccountName</span><br />
                            <small class="text-muted">Kontonummer: @account.AccountNumber</small>
                        </div>
                        <span class="fw-bold text-success">@account.Balance kr</span>
                    </button>
                }
            </div>
        </div>

    </div>
</div>


@foreach (var account in Model.Accounts)
{
    <div class="modal fade" id="modal-@account.AccountId" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@account.AccountName</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p><strong>Kontonummer:</strong> @account.AccountNumber</p>
                    <p><strong>Saldo:</strong> @account.Balance kr</p>
                    <p><strong>Tillgängligt:</strong> @account.Balance kr</p>
                    <a asp-page="RenameAccount" asp-route-accountId="@account.AccountId" class="btn btn-outline-secondary mb-3">Byt namn</a>
                    <h5 class="mt-4">Transaktioner</h5>
                    <ul class="list-group">
                        @if (account.Transactions != null && account.Transactions.Any())
                        {
                            @foreach (var t in account.Transactions.OrderByDescending(t => t.Date))
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@t.Date.ToShortDateString() – @t.Type</span>
                                    @if (t.Amount > 0)
                                    {
                                        <strong class="text-success">@t.Amount kr</strong>
                                    }else {
                                        <strong class="text-danger">@t.Amount kr</strong>
                                    }
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item text-muted">Inga transaktioner</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
