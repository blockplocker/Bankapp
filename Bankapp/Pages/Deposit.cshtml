@page
@model Bankapp.Pages.DepositModel
@{
    ViewData["Title"] = "Sätt in pengar";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h2 class="mb-4 text-center">Sätt in pengar</h2>

            <form method="post" class="p-4 border rounded shadow-sm bg-white">
                <div class="form-floating mb-3">
                    <select asp-for="Input.AccountId" class="form-select">
                        <option value="">Välj konto</option>
                        @foreach (var acc in Model.UserAccounts)
                        {
                            <option value="@acc.AccountId">@acc.AccountName (@acc.Balance kr)</option>
                        }
                    </select>
                    <label asp-for="Input.AccountId">Konto</label>
                    <span asp-validation-for="Input.AccountId" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Amount" class="form-control" placeholder="Belopp" type="number" step="0.01" />
                    <label asp-for="Input.Amount">Belopp (kr)</label>
                    <span asp-validation-for="Input.Amount" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-2">Sätt in</button>
            </form>

            @if (Model.StatusMessage != null)
            {
                <div class="alert alert-info mt-3 text-center">@Model.StatusMessage</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}